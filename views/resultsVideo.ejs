<!DOCTYPE html>


<html>
<head>

    <title>Musicify</title>

    <!--for jquery autocomplete include these three files-->

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

    <!--&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;-->


    <link rel="stylesheet" href="../public/scripts/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/scripts/vendor/semantic-ui/dist/semantic.min.css">

</head>

<body>

<div class="ui secondary  menu">
    <a class="active item">
        Home
    </a>
    <a class="item" href="/users/search">
        Friends
    </a>
    <div class="right menu">
        <div class="item">
            <div class="ui icon input">
                <input id="search_video" type="text" placeholder="Search videos...">
                <i class="search link icon" onclick= "search_results()"></i>
            </div>
        </div>
        <a class="ui item" href="/logout">
            Logout
        </a>
    </div>
</div>

<div class="container">
    <div class="ui three column grid">
        <% results.items.forEach(function (item) { %>
        <div class="column">
            <div class="ui fluid card">
                <div class="image">
                    <img src="<%= item.snippet.thumbnails.high.url%>">
                </div>
                <div class="content">
                    <a class="header"><%= item.title%>Daniel Louise</a>
                </div>
            </div>
        </div>
         <%})%>
    </div>


</div>

</body>
</html>