<!DOCTYPE html>


<html>
<head>

    <title>Musicify</title>

    <!--for jquery autocomplete include these three files-->
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.13/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>




</head>

<body>
<div class="ui secondary  menu">
    <a class="active item">
        Home
    </a>
    <a class="item" href="/users/search">
        Friends
    </a>
    <a><%= results.nextPageToken%></a>
    <div class="right menu">
        <div class="item">
            <div class="ui icon input">
                <input id="search_video" type="text" placeholder="Search videos...">
                <i class="search link icon" onclick= "search_results()"></i>
            </div>
        </div>
        <a class="ui item" href="/logout">
            Logout
        </a>
    </div>
</div>

<div class="ui raised container" style="padding-bottom: 500px;">
    <div class="ui three column grid" style="padding: 50px auto;">
        <% results.items.forEach(function (item) { %>
        <div class="column">
            <a class="ui link card" href="https://youtu.be/<%= item.id.videoId %>">
                <div class="image">
                    <img src="<%= item.snippet.thumbnails.high.url%>">
                </div>
                <div class="content">
                    <div class="header">
                        <%= item.snippet.title %>
                    </div>
                </div>
            </a>
        </div>
         <%})%>
    </div>



    <div class="one column row">
        <div class="column">

            <% if(results.prevPageToken) { %>
            <button id="prevButton" class="ui left labeled left floated icon button" onclick="prevPage(this.data)">
                <i class="left arrow icon"></i>
                Previous
            </button>
            <% } %>


            <% if(results.nextPageToken) { %>
                <a href="<%= .url%>/next/<%= results.nextPageToken %>" id="nextButton" class="ui right labeled right floated icon button">
                    <i class="right arrow icon"></i>
                    Next
                </a>
            <% } %>

        </div>
    </div>


</div>
<script type="text/javascript" src="/scripts/helper/youtubeSearch.js"></script>
</body>
</html>